                "SPKR":"EXT_PWR", 
                "BTN_A": "BTN_A", 
                "BTN_B": "BTN_B",
                "M_OUT1": "M_OUT1", 
                "M_OUT2": "M_OUT2"
            },
            "spiPins": {
                "MOSI": "P15",
                "MISO": "P14",
                "SCK": "P13"
            },
            "i2cPins": {
                "SDA": "P20",
                "SCL": "P19"
            },
            "analogInPins": [
                "P0",
                "P1",
                "P2",
                "P3",
                "P10"
            ],
            "groundPins": [
                "EDGE_GND"
            ],
            "threeVoltPins": [
