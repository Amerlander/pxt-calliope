            "attachPowerOnRight": true,
            "onboardComponents": [
                "accelerometer",
                "buttonpair",
                "ledmatrix",
                "speaker",
                "bluetooth",
                "thermometer",
                "compass",
                "speaker",
                "microphone",
                "rgbled"
            ],
            "useCrocClips": true,
            "marginWhenBreadboarding": [
                0,
                0,
                80,
                0
            ]
        }
    },
    "compileService": {
        "yottaTarget": "bbc-microbit-classic-gcc",
        "yottaCorePackage": "pxt-calliope-core",
        "githubCorePackage": "microsoft/pxt-calliope-core",
        "gittag": "v0.5.12",
        "serviceId": "calliope"
